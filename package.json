{
  "name": "vue-renderer-markdown",
  "type": "module",
  "version": "0.0.45",
  "packageManager": "pnpm@10.15.1",
  "description": "A Vue 3 component that renders Markdown string content as HTML, supporting custom components and advanced markdown features.",
  "author": "Simon He",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git + git@github.com:Simon-He95/vue-markdown-render.git"
  },
  "bugs": {
    "url": "https://github.com/Simon-He95/vue-markdown-render/issues"
  },
  "keywords": [
    "vue",
    "vue3",
    "markdown",
    "markdown-to-html",
    "markdown-renderer",
    "vue-markdown",
    "vue-component",
    "html",
    "renderer",
    "custom-component"
  ],
  "exports": {
    ".": {
      "types": "./dist/types/exports.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./index.css": "./dist/index.css",
    "./index.tailwind.css": "./dist/index.tailwind.css",
    "./tailwind": "./dist/tailwind.ts"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/types/exports.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "pnpm run -C playground dev",
    "test": "vitest",
    "format": "prettier --write --cache .",
    "lint": "eslint . --cache",
    "lint:fix": "pnpm run lint --fix",
    "test:ui": "vitest --ui",
    "test:update": "vitest -u",
    "typecheck": "vue-tsc --noEmit",
    "prepublishOnly": "npm run build",
    "play": "pnpm run -C playground dev",
    "play:build": "pnpm run -C playground build",
    "preview": "pnpm run -C playground preview",
    "build": "vite build --mode npm & npm run build:css",
    "build:css": "tsx build-css.ts",
    "build:demo": "vite build",
    "build:view": "vite preview",
    "release": "bumpp --commit --push --tag && npm publish"
  },
  "peerDependencies": {
    "@iconify/vue": ">=5.0.0",
    "@vueuse/core": ">=8.9.4",
    "class-variance-authority": ">=0.7.1",
    "clsx": ">=2.1.1",
    "katex": ">=0.16.22",
    "mermaid": ">=11",
    "radix-vue": ">=1.9.17",
    "tailwind-merge": ">=3.3.0",
    "uuid": ">=11.1.0",
    "vue": ">=3.0.0",
    "vue-i18n": ">=9",
    "vue-use-monaco": ">=0.0.15"
  },
  "dependencies": {
    "katex": ">=0.16.22",
    "markdown-it": "^14.1.0",
    "markdown-it-container": "^4.0.0",
    "markdown-it-emoji": "^3.0.0",
    "markdown-it-footnote": "^4.0.0",
    "markdown-it-ins": "^4.0.0",
    "markdown-it-mark": "^4.0.0",
    "markdown-it-mathjax3": "^4.3.2",
    "markdown-it-sub": "^2.0.0",
    "markdown-it-sup": "^2.0.0",
    "markdown-it-task-checkbox": "^1.0.6",
    "mermaid": "^11.11.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.19.0",
    "@iconify/vue": "^5.0.0",
    "@types/node": "^18.19.124",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vitest/ui": "^3.2.4",
    "@vueuse/core": "^8.9.4",
    "autoprefixer": "^10.4.21",
    "bumpp": "^8.2.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "eslint": "^9.35.0",
    "lint-staged": "^13.3.0",
    "monaco-editor": "0.52.2",
    "picocolors": "^1.1.1",
    "postcss-cli": "^11.0.1",
    "prettier": "^2.8.8",
    "radix-vue": "^1.9.17",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "unplugin-class-extractor": "^0.0.15",
    "unplugin-vue-components": "^28.8.0",
    "uuid": "^11.1.0",
    "vite": "^7.1.5",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-pages": "^0.33.1",
    "vitest": "^3.2.4",
    "vue": "^3.5.21",
    "vue-i18n": "^11.1.12",
    "vue-tsc": "^2.2.12"
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --ignore-unknown"
    ],
    "*.{vue,js,ts,jsx,tsx,md,json}": "eslint --fix"
  }
}
