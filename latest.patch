+      modalContent.value.appendChild(wrapper)
+      
+      modalCloneWrapper.value = wrapper
+      
+      // Sync initial transform
+      wrapper.style.transform = `translate(${translateX.value}px, ${translateY.value}px) scale(${zoom.value})`
+    }
+  })
