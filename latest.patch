+    dragStart.value = {
+      x: e.clientX - translateX.value,
+      y: e.clientY - translateY.value,
+    }
+  }
+  else {
+    dragStart.value = {
+      x: e.touches[0].clientX - translateX.value,
+      y: e.touches[0].clientY - translateY.value,
+    }
+  }
+}
+
+function onDrag(e: MouseEvent | TouchEvent) {
