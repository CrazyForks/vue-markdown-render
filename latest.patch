+    try {
+      await navigator.clipboard?.writeText(baseCode)
+      setCopying(true)
+      props.onCopy?.(baseCode)
+      setTimeout(() => setCopying(false), 1000)
+    }
+    catch {}
+  }, [baseCode, props])
+
