+    if (modalOpen && modalCloneWrapperRef.current) {
+      modalCloneWrapperRef.current.style.transform = `translate(${translate.x}px, ${translate.y}px) scale(${zoom})`
+    }
+  }, [modalOpen, translate, zoom])
+
