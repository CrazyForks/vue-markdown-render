+    <!-- Header -->
+    <div
+      v-if="props.showHeader"
+      class="infographic-block-header flex justify-between items-center px-4 py-2.5 border-b"
+      :class="props.isDark ? 'bg-gray-800 border-gray-700/30' : 'bg-gray-50 border-gray-200'"
